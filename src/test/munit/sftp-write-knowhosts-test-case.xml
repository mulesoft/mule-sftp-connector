<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:munit="http://www.mulesoft.org/schema/mule/munit"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:sftp="http://www.mulesoft.org/schema/mule/sftp"
      xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
	    http://www.mulesoft.org/schema/mule/sftp http://www.mulesoft.org/schema/mule/sftp/current/mule-sftp.xsd">

    <munit:config name="sftp-write-knowhosts-test-case.xml"/>

    <configuration-properties file="src/test/resources/automation-credentials.properties"/>

    <sftp:config name="config-known-host">
        <sftp:connection username="${sftp.user}" password="${sftp.password}" host="${sftp.ip}" port="${sftp.port}"
                         knownHostsFile="src/test/resources/know_hosts.properties" workingDir="/upload">
        </sftp:connection>
    </sftp:config>

    <!--TODO:W-13914127 Refactor test to use only one sftp server-->
    <sftp:config name="config-known-host-error">
        <sftp:connection username="${sftp.user}" password="${sftp.password}" host="${sftp.ip}" port="${sftp.port}"
                         knownHostsFile="src/test/resources/know_hosts_error.properties" workingDir="/upload">
        </sftp:connection>
    </sftp:config>

    <!--TODO:W-13914127 Refactor test to use only one sftp server-->
    <munit:test name="sftp-write-file-know-host" ignore="true">
        <munit:execution>
            <sftp:write config-ref="config-known-host" path="write.txt" mode="OVERWRITE"
                        createParentDirectories="true"/>
        </munit:execution>
    </munit:test>

    <munit:test name="sftp-write-file-know-host-error" expectedErrorType="SFTP:CANNOT_REACH" ignore="true">
        <munit:execution>
            <sftp:write config-ref="config-known-host-error" path="write.txt" mode="OVERWRITE"
                        createParentDirectories="true"/>
        </munit:execution>
    </munit:test>
</mule>